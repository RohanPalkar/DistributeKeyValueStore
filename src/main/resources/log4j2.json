{
  "configuration": {
    "name": "ReplicaLog",
    "packages": "edu.dkv.internal.log",
    "properties": {
      "property": {
        "name": "server_logging_level",
        "value": "${env:SERVER_LOG_LEVEL:-INFO}"
      }
    },
    "Appenders": {
      "Appender": [
        {
          "name": "replica_logger",
          "type": "ServerProcessAppender",
          "fileName": "${env:SERVER_HOME}/log/replica_${env:SERVER_ID}.log",
          "append": false,
          "PatternLayout": {
            "pattern": "%d{yyyy-MM-dd HH:mm:ss,nnnnnnnnn}{GMT+0} [%-5p][t%T]%x[%C{3}:%L] - %m%n"
          }
        },
        {
          "name": "ConsoleOut",
          "type": "Console",
          "target": "SYSTEM_OUT",
          "PatternLayout": {
            "pattern": "%d{yyyy-MM-dd HH:mm:ss,SSS}{GMT+0} [%-5p][t%T]%x[%C{3}:%L] - %m%n"
          }
        }
      ]
    },
    "loggers": {
      "logger": [
        {
          "name": "logger",
          "level": "${server_logging_level}",
          "additivity": "false",
          "AppenderRef": [
            {
              "ref": "replica_logger"
            },{
              "ref": "ConsoleOut"
            }
          ]
        }
      ],
      "root": {
        "level": "${server_logging_level}",
        "AppenderRef": [
          {
            "ref": "replica_logger"
          }
        ]
      }
    }
  }
}
